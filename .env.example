# Database Configuration
DATABASE_URL="postgresql://postgres:root@localhost:5433/colegio_db"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_DB=colegio_db

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# MinIO / S3 Storage (Development)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_BUCKET=colegio-uploads
MINIO_USE_SSL=false

# S3 Storage (Production - AWS/DigitalOcean Spaces)
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET=colegio-production
# S3_REGION=us-east-1
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@colegio.edu

# Email Service (SendGrid - alternativa)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@colegio.edu

# PgAdmin
PGADMIN_EMAIL=admin@colegio.local
PGADMIN_PASSWORD=admin123

# Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15m
