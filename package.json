    "clsx": "^2.1.1",
    "date-fns": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "next": "14.0.4",
    "nodemailer": "^6.9.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
